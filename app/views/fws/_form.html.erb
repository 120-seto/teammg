<%= form_with(model: @fw, local: true) do |f| %> 
  <div class="field">
    <%= f.label :fw_title, "攻撃練習の名前" %><br />
    <%= f.text_field :fw_title, id:"fw_title" %>
  </div>
  <div class="field">
    <%= f.label :fw_text, "攻撃練習の説明" %><br />
    <%= f.text_area :fw_text, class: :form__text, id:"fw_catch_copy" %>
  </div>
  <div class="field">
    <%= f.label :image, "攻撃練習の画像" %><br />
    <%= f.file_field :image, id:"fw_image" %>
  </div>
  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>