<%= render "shared/header" %>
   <div class="fw-new">
  <% if user_signed_in? %>
   <%= link_to "攻撃練習投稿", new_fw_path, class: "fw" %>
  <% end %>
  <div class="contents row">
    <% @fws.each do |fw| %>
        <p><%= fw.text %></p>
        <span class="name">
          <%= fw.name %>
        </span>
    <% end %>
         <%= render "shared/trs" %>
    </div>
  </div>
  <%#= image_tag fw.image.variant(resize: '500x500'), class: 'fw-image' if fw.image.attached? %>
 </div>