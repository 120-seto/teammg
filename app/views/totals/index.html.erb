<%= render "shared/header" %>
   <div class="total-new">
  <% if user_signed_in? %>
   <%= link_to "全体練習投稿", new_total_path, class: "total" %>
  <% end %>
  <div class="contents row">
    <% @totals.each do |total| %>
        <p><%= total.text %></p>
        <span class="name">
          <%= total.name %>
        </span>
    <% end %>
     <%= render "shared/trs" %>
   </div>
  </div>
  <%#= image_tag total.image.variant(resize: '500x500'), class: 'total-image' if total.image.attached? %>
 </div>